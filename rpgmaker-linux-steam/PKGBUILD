# Maintainer: Karan Kaul <frostbitekarzon+arch@gmail.com>

pkgname=rpgmaker-linux-steam
pkgver=1.1.6
pkgrel=1
pkgdesc="Steam compatibility tool for RPG Maker Linux (cicpoffs)"
arch=('any')
url="https://github.com/bakustarver/rpgmakermlinux-cicpoffs"
license=('custom')
depends=('rpgmaker-linux')
optdepends=('steam: required to use this compatibility tool')

source=(
  "https://github.com/bakustarver/rpgmakermlinux-cicpoffs/archive/refs/tags/v${pkgver}.tar.gz"
)
sha256sums=('SKIP')

package() {
  cd "$srcdir/rpgmakermlinux-cicpoffs-${pkgver}"

  install -d "$pkgdir/usr/share/steam/compatibilitytools.d/rpgmaker-linux"

  cp -r \
    nwjs/packagefiles/rpgmaker-linux-steam-wrapper/* \
    "$pkgdir/usr/share/steam/compatibilitytools.d/rpgmaker-linux/"
}
